@model Guest
@{
    ViewData["Title"] = "Create";
}

<h2>ثبت نام در مهمانی</h2>
<form asp-action="Create" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <p>نام شما : </p>
    <p>
        <input type="text" class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </p>
    <p>نام خانوادگی شما : </p>
    <p>
        <input type="text" class="form-control" asp-for="Family"/>
        <span asp-validation-for="Family" class="text-danger"></span>
    </p>
    <p>تلفن تماس شما : </p>
    <p>
        <input type="text" class="form-control" asp-for="Phone"/>
        <span asp-validation-for="Phone" class="text-danger"></span>
    </p>
    <p>آیا در این مهمانی شرکت میکنید ؟ </p>
    <p>
        <select asp-for="WillAttend" class="form-control">
            <option value="">انتخاب کنید</option>
            <option value="True">شرکت میکنم</option>
            <option value="False">شرکت نمیکنم</option>
        </select>
    </p>
    <p>
        <input type="submit" class="btn btn-success" value="ثبت نام"/>
    </p>
</form>


